<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="student_tree" model="ir.ui.view">
        <field name="name">student.detail.form</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
            <tree>
                <field name="student_name" string="Name"/>
                <field name="roll" string="Roll"/>
                <field name="dob" string="Birthday"/>
                <field name="image" string="Image"/>
                <field name="class_name" string="Class"/>
                <!-- <field name="subject_name" string="Subject"/>-->
                <field name="introduction" string="Introduction"/>

                <!-- <sheet>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet> -->
            </tree>
        </field>
    </record>

    <record id="student_form" model="ir.ui.view">
        <field name="name">student.detail.form</field>
        <field name="model">student.detail</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="student_name" string="Name"/>
                        <field name="roll" string="Roll"/>
                        <field name="dob" string="Birthday"/>
                        <field name="image" string="Image"/>
                        <field name="class_name" string="Class"/>
                        <field name="subject_name">
                            <tree editable="bottom">
                                <field name="subjects_name" string="Subjects"/>
                            </tree>
                        </field>
                        <field name="introduction" string="Introduction"/>
                    </group>
                </sheet>

                <!-- <sheet>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet> -->
            </form>
        </field>
    </record>

     <record id="student_form_2" model="ir.ui.view">
        <field name="name">student.subject.form</field>
        <field name="model">student.subject</field>
        <field name="arch" type="xml">

                <sheet>
                    <group>

                            <tree editable="bottom">
                                <field name="subjects_name" string="Subjects"/>
                            </tree>

                    </group>
                </sheet>

                <!-- <sheet>
                    <group>
                        <group>
                        </group>
                        <group>
                        </group>
                    </group>
                </sheet> -->

        </field>
    </record>

    <!-- Top menu item -->
    <record id="student_action" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.detail</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student detail!
            </p>
        </field>
    </record>

    <record id="student_action_2" model="ir.actions.act_window">
        <field name="name">Students subjects</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">student.subject</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first student detail!
            </p>
        </field>
    </record>

    <menuitem id="school_root"
              name="School"
              sequence="10"/>

    <menuitem id="school_student_root"
              name="Students detail"
              parent="school_root"
              sequence="10"
    />
    <menuitem id="school_student_root"
              name="Students detail"
              parent="school_root"
              action="student_action"
              sequence="10"/>
     <menuitem id="school_student_root2"
              name="Students subjects"
              parent="school_root"
              action="student_action_2"
              sequence="10"/>

    <!--
         -->

</odoo>
